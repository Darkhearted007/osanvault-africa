#!/bin/bash
set -euo pipefail

ABOUT_FILE="about.html"
BACKUP_FILE="about.html.bak"

# Always back up before making changes
cp "$ABOUT_FILE" "$BACKUP_FILE"

# Insert/update the founder bio section with schema.org JSON-LD
cat > "$ABOUT_FILE" <<'HTML'
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="About ÒsánVault Africa - Tokenizing real estate, minerals, land banking, and sustainable investments in Africa.">
  <title>About ÒsánVault Africa</title>

  <!-- Schema.org JSON-LD for Organization + Person -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "ÒsánVault Africa",
    "url": "https://osanvaultafrica.com",
    "logo": "https://osanvaultafrica.com/assets/logo.png",
    "sameAs": [
      "https://t.me/OsanVaultAfrica",
      "https://www.facebook.com/share/1EzQgpkfwn/"
    ],
    "founder": {
      "@type": "Person",
      "name": "Olugbenga Ajayi",
      "url": "https://osanvaultafrica.com/about.html",
      "sameAs": [
        "https://www.facebook.com/share/1EzQgpkfwn/"
      ],
      "description": "Visionary entrepreneur building Africa’s future through blockchain-powered real estate and mineral tokenization. Founder of ÒsánVault Africa."
    }
  }
  </script>
</head>
<body>
  <h1>About ÒsánVault Africa</h1>
  <p>ÒsánVault Africa is pioneering tokenized real estate and mineral resources across Africa. Our platform provides fractional ownership, decentralized finance integration, and real-world yield for investors worldwide.</p>

  <h2>Founder</h2>
  <p><strong>Olugbenga Ajayi</strong> — Founder of ÒsánVault Africa. Visionary entrepreneur building Africa’s future through blockchain-powered real estate and mineral tokenization. Passionate about unlocking wealth, sovereignty, and financial inclusion across Africa.</p>
</body>
</html>
HTML

# Sanity check to avoid committing empty or corrupt file
if grep -q "ÒsánVault Africa" "$ABOUT_FILE"; then
  echo "✅ About page updated successfully with schema.org JSON-LD."
else
  echo "❌ Update failed, restoring backup."
  mv "$BACKUP_FILE" "$ABO
